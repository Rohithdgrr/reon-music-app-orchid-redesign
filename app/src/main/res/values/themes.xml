<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- REON Light Theme -->
    <style name="Theme.REON" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/reon_background</item>
        <item name="android:navigationBarColor">@color/reon_surface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowBackground">@color/reon_background</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.REON.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/reon_surface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/reon_logo</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.REON</item>
    </style>
</resources>
